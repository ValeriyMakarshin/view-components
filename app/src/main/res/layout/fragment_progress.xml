<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.hodzi.viewcomponents.ui.progress.view.CustomProgressBar
            android:id="@+id/custom_progress_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:progress_value="0.4" />

        <EditText
            android:id="@+id/progress_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/update_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update progress" />

        <Button
            android:id="@+id/plus_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+10 progress" />

        <com.hodzi.viewcomponents.ui.progress.view.CustomProgressBar
            android:id="@+id/custom_progress_test_1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.hodzi.viewcomponents.ui.progress.view.CustomProgressBar
            android:id="@+id/custom_progress_test_2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View with custom stroke widths:" />

        <com.hodzi.viewcomponents.ui.progress.view.CustomProgressBar
            android:id="@+id/custom_progress_test_3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:progress_stroke_width="30dp"
            app:text_size="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>