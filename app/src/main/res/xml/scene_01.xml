<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/like"
        motion:constraintSetStart="@+id/start"
        motion:duration="300">
        <OnSwipe
            motion:dragDirection="dragRight"
            motion:touchAnchorId="@id/swipe_layout"
            motion:touchAnchorSide="right" />
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/dislike"
        motion:constraintSetStart="@+id/start"
        motion:duration="300">
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorId="@id/swipe_layout"
            motion:touchAnchorSide="left" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@id/swipe_layout"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:rotation="0.0"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/swipe_like_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="@null"
            motion:layout_constraintStart_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="@null"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/swipe_dislike_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="@null"
            motion:layout_constraintEnd_toStartOf="parent"
            motion:layout_constraintStart_toStartOf="@null"
            motion:layout_constraintTop_toTopOf="parent" />

    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/dislike"
        motion:deriveConstraintsFrom="@id/start">
        <Constraint
            android:id="@id/swipe_layout"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:rotation="-15.0"
            motion:layout_constraintEnd_toStartOf="parent"
            motion:layout_constraintStart_toStartOf="@null" />

        <Constraint
            android:id="@id/swipe_dislike_icon"
            android:layout_width="128dp"
            android:layout_height="128dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintEnd_toStartOf="@null"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/like"
        motion:deriveConstraintsFrom="@id/start">

        <Constraint
            android:id="@id/swipe_layout"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:rotation="15.0"
            motion:layout_constraintEnd_toEndOf="@null"
            motion:layout_constraintStart_toEndOf="parent" />

        <Constraint
            android:id="@id/swipe_like_icon"
            android:layout_width="128dp"
            android:layout_height="128dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@null"
            motion:layout_constraintStart_toStartOf="parent" />


    </ConstraintSet>

</MotionScene>